{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    "lib": ["es6", "dom"],
    "jsx": "react",

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,

    // 支持 ES6 导入
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "es6",
    "vue",
    "postcss.config.js"
  ]
}
